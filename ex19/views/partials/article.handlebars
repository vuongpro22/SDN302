<div class="col-md-6 mb-4">
    <div class="card article-card h-100">
        <div class="card-body">
            <h5 class="card-title">
                <a href="/articles/{{id}}" class="text-decoration-none">{{title}}</a>
            </h5>
            <p class="card-text">
                <small class="text-muted">
                    By <strong>{{author}}</strong> on {{formatDate date}}
                </small>
            </p>
            <p class="card-text">{{content}}</p>
            <a href="/articles/{{id}}" class="btn btn-primary">Read More</a>
        </div>
    </div>
</div>
